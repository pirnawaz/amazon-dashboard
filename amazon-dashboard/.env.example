# Required: development | production
APP_ENV=development
POSTGRES_DB=amazon_dashboard
POSTGRES_USER=amazon_user
POSTGRES_PASSWORD=change_me
POSTGRES_PORT=5432
# Required
DATABASE_URL=postgresql+psycopg://amazon_user:change_me@db:5432/amazon_dashboard
# Required
JWT_SECRET=change_me_to_a_long_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60
FRONTEND_ORIGIN=http://localhost:5173
# Optional: requests per minute per IP/user (default 100)
RATE_LIMIT_PER_MINUTE=100

# Alerts worker: interval in seconds (default 900 = 15 min)
ALERTS_INTERVAL_SECONDS=900

# Optional: SMTP for alert email notifications (Phase 7B)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_TLS=true

# Optional: base64 urlsafe Fernet key for LWA refresh token encryption at rest (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
TOKEN_ENCRYPTION_KEY=

# Inventory freshness (Phase 11.4): age in hours for stale warnings
# INVENTORY_STALE_WARNING_HOURS: warning when last sync/as_of_at >= this (default 24)
# INVENTORY_STALE_CRITICAL_HOURS: critical when >= this (default 72)
INVENTORY_STALE_WARNING_HOURS=24
INVENTORY_STALE_CRITICAL_HOURS=72

# Amazon Ads API (Sprint 13): optional; set to enable live sync
# ENABLE_AMAZON_ADS_SYNC=true to run ads sync worker (otherwise dry_run)
# AMAZON_ADS_CLIENT_ID / AMAZON_ADS_CLIENT_SECRET from Amazon Advertising API
ENABLE_AMAZON_ADS_SYNC=false
AMAZON_ADS_CLIENT_ID=
AMAZON_ADS_CLIENT_SECRET=
AMAZON_ADS_REGION=NA
